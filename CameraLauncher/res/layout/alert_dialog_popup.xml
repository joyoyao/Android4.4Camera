<com.sprd.camera.AlertDialogPopup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_group_item_options"
    style="@style/SettingPopupOptionsWindow"
    android:layout_width="@dimen/big_setting_popup_window_width"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="@dimen/big_setting_popup_window_content_width"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_full_holo_light"
        android:orientation="vertical"
        android:weightSum="102" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/popup_title_frame_min_height" >

            <TextView
                android:id="@+id/rotate_dialog_title"
                style="@style/PopupOptionsTitleText" />
        </FrameLayout>

        <View style="@style/PopupTitleThinSeparator" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp" >

            <TextView
                android:id="@+id/rotate_dialog_text"
                style="@style/SettingItemTitleTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:singleLine="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rotate_dialog_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="48dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/rotate_dialog_button2"
                style="@style/SettingItemTitleTag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/dialog_button_background_holo_light"
                android:gravity="center"
                android:maxLines="2"
                android:minHeight="48dp"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/list_divider" />

            <Button
                android:id="@+id/rotate_dialog_button1"
                style="@style/SettingItemTitleTag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/dialog_button_background_holo_light"
                android:gravity="center"
                android:maxLines="2"
                android:minHeight="48dp"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</com.sprd.camera.AlertDialogPopup>

<com.android.camera.ui.ListPrefSettingPopup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_group_item_options"
    style="@style/SettingPopupOptionsWindow"
    android:layout_width="@dimen/big_setting_popup_window_width"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="@dimen/big_setting_popup_window_content_width"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_full_holo_light"
        android:orientation="vertical"
        android:weightSum="102" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="@dimen/popup_title_frame_min_height" >

            <TextView
                android:id="@+id/title"
                style="@style/PopupOptionsTitleText" />
        </FrameLayout>

        <View style="@style/PopupTitleThinSeparator" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100" >

            <ListView
                android:id="@+id/settingList"
                style="@style/SettingItemList"
                android:choiceMode="singleChoice"
                android:divider="@drawable/list_divider_holo_light" />
        </FrameLayout>
    </LinearLayout>

</com.android.camera.ui.ListPrefSettingPopup>
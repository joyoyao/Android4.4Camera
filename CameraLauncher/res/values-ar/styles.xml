<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <!-- Camera resources below -->
    <!-- UUI general setting & advanced setting -->
    <!-- UUI setting item title -->
    <style name="SettingItemTitleTag">
        <item name="android:textSize">@dimen/setting_item_text_size</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textColor">@color/item_black</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!-- UUI current item -->
    <style name="SettingItemTag">
        <item name="android:textSize">@dimen/setting_item_text_size</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/item_gray</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>

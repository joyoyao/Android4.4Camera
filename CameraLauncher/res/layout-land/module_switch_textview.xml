<?xml version="1.0" encoding="utf-8"?>

<com.android.camera.ModuleSwitcherView
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/module_switch_textview"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:visibility="visible" >

    <TextView
        android:id="@+id/del_switch_textview"
        android:textColor="#ffffffff"
        android:textSize="20px"
        android:shadowColor="#ff000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_centerInParent="true" />
    
    <TextView
        android:id="@+id/last_switch_textview"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        android:shadowColor="#ff000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/current_switch_textview"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        android:shadowColor="#ff000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/next_switch_textview"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        android:shadowColor="#ff000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" />

</com.android.camera.ModuleSwitcherView>
